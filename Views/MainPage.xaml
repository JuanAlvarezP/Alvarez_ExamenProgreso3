<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alvarez_ExamenProgreso3.MainPage">

    <StackLayout>
        <Button Text="Generar Dato Aleatorio" Command="{Binding GetFactsCommand}" />
        <ListView ItemsSource="{Binding Facts}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding FactText}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
